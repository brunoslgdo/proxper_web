extend ../templates/main
append head_config
    - pageTitle = 'Unete a nuestro equipo'
block main
    +jumbotron_pages(
        'join-us',
        '¡Escríbenos!'
    )
    section.container.container--p88.contact-form
        .subcontainer--w880.contact-form__wrap
            .contat-form__child
                h2.head__title.weight--light.line-height--130.first ¡Te estamos buscando! Recibirás el mejor proceso de capacitación y desarrollo. 
            .contat-form__child
                form(action="", class="form")
                    label(for="name", class="form__label") Nombre (requerido)
                        input(type="text", placeholder="Escribe tu nombre", class="form__input")
                    label(for="name", class="form__label") URL de tu perfil en Linkedin
                        input(type="text", placeholder="Ingresa el enlace a tu perfil de Linkedin", class="form__input")
                    label(for="name", class="form__label") E-mail (requerido)
                        input(type="text", placeholder="Escribe tu correo", class="form__input")
                    label(for="name", class="form__label") Teléfono (requerido)
                        input(type="tel", placeholder="Escribe tu número telefónico", class="form__input")