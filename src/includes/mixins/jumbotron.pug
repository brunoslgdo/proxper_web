mixin jumbotron_img_product(imgThumbail)
    section.jumbotron.jumbotron--mb.jumbotron--h440.polygon--diagonal-bottom
        img(src=`${pathImg}${imgThumbail}`, class="jumbotron__hero-image", alt=`${textTitle}`)

mixin jumbotron_footer(imgHero, textTitle)
    section.jumbotron.jumbotron--h440.polygon--diagonal-top
        img(src=`${pathImg}${imgHero}`, class="jumbotron__hero-image", alt=`${textTitle}`)
        .jumbotron__heading.jumbotron--text-center
            h2.jumbotron__title= textTitle
            h3.jumbotron__caption= textCaption

