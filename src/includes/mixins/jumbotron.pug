mixin jumbotron_home(imgHero, textTitle, textCaption)
    section.jumbotron.jumbotron--h560.jumbotron--bg-home.polygon--shape-v
        .jumbotron__heading.jumbotron--text-center
            h2.jumbotron__title !{`${textTitle}`}
            h3.jumbotron__caption !{`${textCaption}`}

mixin jumbotron_pages(imgHero, textTitle)
    - let img = imgHero 
    if img == 'our-team'
        section.jumbotron.jumbotron--h440.jumbotron--bg-our-team.polygon--shape-v
            .jumbotron__heading.jumbotron--text-center
                h2.jumbotron__title= textTitle
    if img == 'join-us'
        section.jumbotron.jumbotron--h440.jumbotron--bg-join-us.polygon--shape-v
            .jumbotron__heading.jumbotron--text-center
                h2.jumbotron__title= textTitle
    if img == 'contact'
        section.jumbotron.jumbotron--h440.jumbotron--bg-contact.polygon--shape-v
            .jumbotron__heading.jumbotron--text-center
                h2.jumbotron__title= textTitle

mixin jumbotron_products(imgProduct, textTitle, textDescription)
    section.jumbotron.bg--second-dark
        .jumbotron__grid
            .jumbotron__product-image
                img(src=`${pathImg}${imgProduct}`, class="jumbotron__image", alt=`${textTitle}`)
            .jumbotron__content
                h2.jumbotron__title= textTitle
                p.jumbotron__description= textDescription

