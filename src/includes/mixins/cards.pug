include ../config/conf_cards

mixin cards(arrCards)
    - let arr = arrCards
    ul.wrap-card
        each item in arrCards
            li.card
                div(class=`${arr == CARDS_PRODUCT ? "card__thumbnail" : "card__thumbnail thumbnail--small"}`)
                    if arr == CARDS_PRODUCT
                        img(src=`${pathImg}${item.productThumbnail}`, class="card__hero", alt="")
                if arr !== CARDS_PRODUCT
                    .card__photo
                        img(src=`${pathImg}${item.teamPhoto}`, class="card__img", alt="")
                .card__content
                    .card__description
                        h2.card__title !{`${arr == CARDS_PRODUCT ? item.productName : item.teamName}`}
                        p.card__text !{`${arr == CARDS_PRODUCT ? item.productDescription : item.teamTitle}`}
                    .card__cta
                        if arr == CARDS_PRODUCT
                            a(href=`${item.productCtaUrl}`, class="card__link") Leer m√°s
                        if arr !== CARDS_PRODUCT
                            a(href="mailto:xmendoza@proxper.com.mx", class="card__link"): img(src=`${pathImg}icon-mail.svg`, alt="")
                            a(href="tel:5569046638", class="card__link"): img(src=`${pathImg}icon-call.svg`, alt="")

mixin cards_hdiw(arrCards)
